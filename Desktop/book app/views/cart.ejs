<% if (error) { %>
    <p class="alert alert-danger" style="text-align: center;">
        <%= error %>
    </p>
<% } %>

<div class="container">
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% for (let book of books) {%>
          <tr>
            <th><img width="50" height="50" src="/uploads/<%= book.image%>"></th>
            <td><%= book.name %></td>
            <td><%= book.auther %></td>
            <td>$<%= book.price %></td>
            <td><a href="/mybooks/delete/<%=book._id%>" class="btn btn-danger">Delete</a>
            
                <a href="/mybooks/update/<%=book._id%>" class="btn btn-primary">Update</a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    
    
</div>  

